<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="none"
    android:fillViewport="false"
    android:layout_width="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Company Name"
            android:id="@+id/textView_name_profile"
            android:layout_below="@+id/imageView_profilepic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Type"
            android:id="@+id/textView_type"
            android:layout_below="@+id/textView_name_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />


        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/edit_image"
            android:background="@android:color/transparent"
            android:layout_below="@+id/textView_year"
            android:layout_alignRight="@+id/textView_bio"
            android:layout_alignEnd="@+id/textView_bio" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView_profilepic"
            android:layout_centerHorizontal="true"
            android:src="@drawable/image"
            android:layout_marginTop="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location"
            android:id="@+id/textView_brach"
            android:layout_below="@+id/textView_type"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_description"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Job  Description - khdblhboh ouyg ouygfuyg ouy gouyf giauygfiuy foauygf oasyufg ausoyfg asuydfg oasuyfg asuyfg siuyfgisu yfsi ufysf gsuyf g"/>



        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_contact"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            android:padding="0dp"
            android:layout_below="@+id/card_view_description"
            android:layout_alignLeft="@+id/card_view_description"
            android:layout_alignStart="@+id/card_view_description"
            android:layout_marginTop="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view_description"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:nestedScrollingEnabled="false"
                android:paddingRight="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="Contact"
                    android:id="@+id/textView_fblink2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Twitter"
                    android:id="@+id/editText_twlink"
                    android:layout_below="@+id/textView_fblink2"
                    android:layout_toRightOf="@+id/imageView_fb"
                    android:layout_toEndOf="@+id/imageView_fb"
                    android:layout_margin="5dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="email"
                    android:id="@+id/editText_mail"
                    android:layout_below="@+id/imageView_fb"
                    android:layout_alignLeft="@+id/editText_twlink"
                    android:layout_alignStart="@+id/editText_twlink"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Website"
                    android:id="@+id/editText_contact"
                    android:layout_below="@+id/imageView_in"
                    android:layout_alignLeft="@+id/editText_mail"
                    android:layout_alignStart="@+id/editText_mail"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:id="@+id/imageView_fb"
                    android:src="@drawable/tw"
                    android:layout_alignTop="@+id/editText_twlink"
                    android:layout_alignLeft="@+id/imageView_in"
                    android:layout_alignStart="@+id/imageView_in"
                    android:layout_marginTop="2dp" />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:id="@+id/imageView_tw"
                    android:src="@drawable/website"
                    android:layout_alignTop="@+id/editText_contact"
                    android:layout_alignLeft="@+id/imageView_in"
                    android:layout_alignStart="@+id/imageView_in"
                    android:layout_marginTop="2dp" />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:id="@+id/imageView_in"
                    android:src="@drawable/mail"
                    android:layout_alignTop="@+id/editText_mail"
                    android:layout_alignLeft="@+id/textView_fblink2"
                    android:layout_alignStart="@+id/textView_fblink2"
                    android:layout_marginTop="2dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Description"
            android:id="@+id/textView_description"
            android:layout_below="@+id/textView_brach"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView"
            android:src="@drawable/location"
            android:layout_alignBottom="@+id/textView_brach"
            android:layout_toLeftOf="@+id/textView_brach"
            android:layout_toStartOf="@+id/textView_brach"
            android:layout_marginRight="10dp" />


    </RelativeLayout>
</ScrollView>