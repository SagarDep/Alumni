<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingRight="5dp"
        android:layout_above="@+id/include">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card1"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/cardView_logout"
                android:layout_alignEnd="@+id/cardView_logout"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/info"
                        android:id="@+id/imageView2"
                        android:layout_alignTop="@+id/textView_Convocation"
                        android:layout_alignLeft="@+id/imageView"
                        android:layout_alignStart="@+id/imageView"
                        android:layout_marginTop="13dp" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="Convocation"
                        android:textAlignment="viewStart"
                        style="?android:attr/borderlessButtonStyle"
                        android:clickable="true"
                        android:layout_marginTop="5dp"
                        android:id="@+id/textView_Convocation"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView2"
                        android:layout_toEndOf="@+id/imageView2"
                        android:layout_marginLeft="10dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#cccccc"
                        android:layout_below="@id/textView_Convocation"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/profile"
                        android:layout_alignTop="@+id/textView_myprofile"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/imageView" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="My Profile"
                        style="?android:attr/borderlessButtonStyle"
                        android:textAlignment="viewStart"
                        android:id="@+id/textView_myprofile"
                        android:layout_below="@+id/textView_Convocation"
                        android:layout_alignLeft="@+id/textView_Convocation"
                        android:layout_alignStart="@+id/textView_Convocation" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#cccccc"
                        android:layout_below="@id/textView_myprofile"
                        android:layout_alignLeft="@+id/button_fbPage"
                        android:layout_alignStart="@+id/button_fbPage" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Facebook"
                        android:textAppearance="?android:textAppearanceMedium"
                        style="?android:attr/borderlessButtonStyle"
                        android:id="@+id/button_fbPage"
                        android:textAlignment="viewStart"
                        android:layout_below="@+id/textView_myprofile"
                        android:layout_alignLeft="@+id/textView_myprofile"
                        android:layout_alignStart="@+id/textView_myprofile" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#cccccc"
                        android:layout_below="@id/button_fbPage" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About Arya Alumni App"
                        android:textAppearance="?android:textAppearanceMedium"
                        style="?android:attr/borderlessButtonStyle"
                        android:id="@+id/button_about_app"
                        android:textAlignment="viewStart"
                        android:layout_below="@+id/button_fbPage"
                        android:layout_alignLeft="@+id/button_fbPage"
                        android:layout_alignStart="@+id/button_fbPage" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#cccccc"
                        android:layout_below="@id/button_about_app"
                        android:layout_alignLeft="@+id/button_fbPage"
                        android:layout_alignStart="@+id/button_fbPage" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About College"
                        android:id="@+id/button_about_cllege"
                        android:textAlignment="viewStart"
                        android:textAppearance="?android:textAppearanceMedium"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_below="@+id/button_about_app"
                        android:layout_alignLeft="@+id/button_about_app"
                        android:layout_alignStart="@+id/button_about_app" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#cccccc"
                        android:layout_below="@id/button_about_cllege"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Support Us"
                        android:id="@+id/button_support"
                        android:textAlignment="viewStart"
                        android:textAppearance="?android:textAppearanceMedium"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_below="@+id/button_about_cllege"
                        android:layout_alignLeft="@+id/button_about_app"
                        android:layout_alignStart="@+id/button_about_app" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#cccccc"
                        android:layout_below="@id/button_support"
                        android:layout_alignLeft="@+id/button_about_app"
                        android:layout_alignStart="@+id/button_about_app" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact Us"
                        android:id="@+id/button_contact_us"
                        android:textAlignment="viewStart"
                        android:textAppearance="?android:textAppearanceMedium"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_below="@+id/button_support"
                        android:layout_alignLeft="@+id/button_about_app"
                        android:layout_alignStart="@+id/button_about_app" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#cccccc"
                        android:layout_below="@id/button_contact_us"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FAQs"
                        android:id="@+id/button_faq"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textAlignment="viewStart"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_below="@id/button_contact_us"
                        android:layout_alignLeft="@+id/button_rate_us"
                        android:layout_alignStart="@+id/button_rate_us" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#cccccc"
                        android:layout_below="@id/button_faq"
                        android:layout_alignLeft="@+id/button_fbPage"
                        android:layout_alignStart="@+id/button_fbPage" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rate Us"
                        android:id="@+id/button_rate_us"
                        android:layout_below="@id/button_faq"
                        android:textAlignment="viewStart"
                        style="?android:attr/borderlessButtonStyle"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:layout_alignLeft="@+id/button_about_cllege"
                        android:layout_alignStart="@+id/button_about_cllege" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imageView6"
                        android:src="@drawable/fb"
                        android:layout_below="@+id/textView_myprofile"
                        android:layout_toLeftOf="@+id/textView_Convocation"
                        android:layout_toStartOf="@+id/textView_Convocation"
                        android:layout_marginTop="13dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imageView7"
                        android:layout_below="@+id/button_fbPage"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imageView8"
                        android:src="@drawable/menu"
                        android:layout_alignTop="@+id/imageView7"
                        android:layout_alignLeft="@+id/imageView6"
                        android:layout_alignStart="@+id/imageView6"
                        android:layout_marginTop="13dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/info"
                        android:id="@+id/imageView9"
                        android:layout_alignTop="@+id/button_about_cllege"
                        android:layout_toLeftOf="@+id/textView_Convocation"
                        android:layout_toStartOf="@+id/textView_Convocation"
                        android:layout_marginTop="13dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imageView10"
                        android:layout_below="@+id/button_about_cllege"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imageView11"
                        android:src="@drawable/mail"
                        android:layout_alignTop="@+id/imageView10"
                        android:layout_alignLeft="@+id/imageView9"
                        android:layout_alignStart="@+id/imageView9"
                        android:layout_marginTop="13dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imageView12"
                        android:src="@drawable/faq"
                        android:layout_alignTop="@+id/button_faq"
                        android:layout_alignLeft="@+id/imageView11"
                        android:layout_alignStart="@+id/imageView11"
                        android:layout_marginTop="13dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imageView13"
                        android:src="@drawable/star"
                        android:layout_below="@+id/button_faq"
                        android:layout_alignLeft="@+id/imageView12"
                        android:layout_alignStart="@+id/imageView12"
                        android:layout_marginTop="13dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imageView14"
                        android:src="@drawable/info"
                        android:layout_alignTop="@+id/button_contact_us"
                        android:layout_alignLeft="@+id/imageView11"
                        android:layout_alignStart="@+id/imageView11"
                        android:layout_marginTop="13dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cardView_logout"
                android:layout_below="@+id/card1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/log_out"
                        android:id="@+id/imageView_logout"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="13dp" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="Log Out"
                        android:textAlignment="viewStart"
                        style="?android:attr/borderlessButtonStyle"
                        android:clickable="true"
                        android:textColor="#ff1744"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView_logout"
                        android:layout_toEndOf="@+id/imageView_logout"
                        android:layout_marginLeft="10dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>



    <include
        layout="@layout/menu"
        android:id="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </include>


</RelativeLayout>