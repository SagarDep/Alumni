<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="www.aryacollege.in"
                android:id="@+id/website"
                android:textAppearance="?android:textAppearanceMedium"
                android:textAlignment="viewStart"
                style="?android:attr/borderlessButtonStyle"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/phone"
                android:layout_alignStart="@+id/phone" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:layout_below="@id/website"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView16"
                android:src="@drawable/website"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="19dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call on 9784878727"
                android:id="@+id/phone"
                android:textAppearance="?android:textAppearanceMedium"
                android:textAlignment="viewStart"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/website"
                android:layout_toRightOf="@+id/imageView16"
                android:layout_toEndOf="@+id/imageView16"
                android:layout_marginStart="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:layout_below="@id/phone"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView17"
                android:src="@drawable/ph"
                android:layout_marginBottom="13dp"
                android:layout_alignBottom="@+id/phone"
                android:layout_toLeftOf="@+id/phone"
                android:layout_toStartOf="@+id/phone" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mail@aryacollege.in"
                android:id="@+id/mail"
                android:layout_marginBottom="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textAlignment="viewStart"
                style="?android:attr/borderlessButtonStyle"
                android:layout_below="@+id/phone"
                android:layout_alignLeft="@+id/phone"
                android:layout_alignStart="@+id/phone" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView18"
                android:src="@drawable/mail"
                android:layout_marginTop="13dp"
                android:layout_alignTop="@+id/mail"
                android:layout_toLeftOf="@+id/phone"
                android:layout_toStartOf="@+id/phone" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>