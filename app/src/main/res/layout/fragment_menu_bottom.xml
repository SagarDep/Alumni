<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/card_background"

    android:weightSum="4">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/linearLayout_home"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/button_home"
            app:iiv_color="@android:color/black"
            app:iiv_icon="faw-users" />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="7dp"
            android:background="#d60d0d"
            android:id="@+id/view_home"
            android:visibility="gone"
             />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/linearLayout_filter"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/button_filter"
            app:iiv_color="@android:color/black"
            app:iiv_icon="faw-filter" />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="7dp"
            android:background="#d60d0d"
            android:id="@+id/view_filter"
            android:visibility="gone"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/linearLayout_jobs"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/button_jobs"
            app:iiv_color="@android:color/black"
            app:iiv_icon="faw-briefcase"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="7dp"
            android:background="#d60d0d"
            android:visibility="gone"
            android:id="@+id/view_jobs"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/linearLayout_settings"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/button_settings"
            app:iiv_color="@android:color/black"
            app:iiv_icon="faw-ellipsis-h"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="12dp"
            android:background="#d60d0d"
            android:visibility="gone"
            android:id="@+id/view_settings"
            />

    </LinearLayout>

    </LinearLayout>

